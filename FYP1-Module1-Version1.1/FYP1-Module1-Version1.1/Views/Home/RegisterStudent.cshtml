
@model FYP1_Module1_Version1._1.Models.student
@using FYP1_Module1_Version1._1.Models;


@{
    Layout = null;
}



<!DOCTYPE html>
<html class="hide-sidebar ls-bottom-footer" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>The Torch</title>
    <link href="~/Content/css/vendor/all.css" rel="stylesheet">

    <link href="~/Content/css/app/app.css" rel="stylesheet">



    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

</head>

<body class="login"  style="background-color:darkgrey;" >

    <div id="content">
        <div class="container-fluid">

            <div class="lock-container">
                <div class="panel panel-default text-center paper-shadow" data-z="0.5">
                    <h1 class="text-display-1 text-center margin-bottom-none" style="color:black">Student</h1>
                    <h4 style="align-content:center;color:black">Registration</h4>
                    <img src="~/Content/logo.png" class="img-circle width-80">
                    <div class="panel-body">

                        <!-- Signup -->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
                        <form role="form" action="index.html">
                            <div class="form-group">
                                <div class="form-control-material">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                    <label for="username" style="color:black">Name</label>
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })


                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-control-material">
                                   @Html.EditorFor(model => model.RollNumber, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                    <label for="username" style="color:black">Roll No</label>
                                     @Html.ValidationMessageFor(model => model.RollNumber, "", new { @class = "text-danger" })


                                </div>
                            </div>
                            
                            <div class="form-group">
                                 <div class="form-control-material">
                                     @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", required = "required", type="password" } })
                                     <label for="username" style="color:black">Password</label>

                                      @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })


                                </div>
                            </div>
                            
                            <div class="text-center"style="padding-top:20px">
                                <input type="submit" value="Create" class="btn btn-primary fa fa-fw fa-unlock-alt" style="width:100px" />
 </div>
                        </form>
                        <!-- //Signup -->
}
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <strong>The Torch</strong> nu.edu.pk &copy; Copyright 2017
    </footer>
    <script>
    var colors = {
      "danger-color": "#e74c3c",
      "success-color": "#81b53e",
      "warning-color": "#f0ad4e",
      "inverse-color": "#2c3e50",
      "info-color": "#2d7cb5",
      "default-color": "#6e7882",
      "default-light-color": "#cfd9db",
      "purple-color": "#9D8AC7",
      "mustard-color": "#d4d171",
      "lightred-color": "#e15258",
      "body-bg": "#f6f6f6"
    };
    var config = {
      theme: "html",
      skins: {
        "default": {
          "primary-color": "#42a5f5"
        }
      }
    };
    </script>

    <script src="~/Scripts/js/vendor/all.js"></script>
    <script src="~/Scripts/js/app/app.js"></script>


</body>

</html>